<h1> Cocktails list </h2>
  <div class="container">
    <div class="row">
      <% @cocktails.each.with_index do |cocktail, index| %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="cocktail-card">
              <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
            </div>
          </div>
      <% end %>
    </div>
    <%= link_to "Create Cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
